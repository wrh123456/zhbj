<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--上部区域-->
    <tttpurlconnection.itcast.cn.zhbj.widget.NoScrollViewPager
        android:id="@+id/content_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <!--下部区域-->
    <RadioGroup
        android:id="@+id/content_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/tab_home"
            style="@style/radio_tab"
            android:drawableTop="@drawable/tab_home_bg"
            android:text="首页"
            />
        <RadioButton
            android:id="@+id/tab_newscenter"
            style="@style/radio_tab"
            android:drawableTop="@drawable/tab_newscenter_bg"
            android:text="新闻中心"
            />
        <RadioButton
            android:id="@+id/tab_smartservice"
            style="@style/radio_tab"
            android:drawableTop="@drawable/tab_smarstservice_bg"
            android:text="智慧服务"
            />
        <RadioButton
            android:id="@+id/tab_gov"
            style="@style/radio_tab"
            android:drawableTop="@drawable/tab_gov_bg"
            android:text="服务"
            />
        <RadioButton
            android:id="@+id/tab_setting"
            style="@style/radio_tab"
            android:drawableTop="@drawable/tab_setting_bg"
            android:text="设置"
            />

    </RadioGroup>

</LinearLayout>