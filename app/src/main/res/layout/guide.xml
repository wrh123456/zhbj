<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--ViewPager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v4.view.ViewPager>
    <Button
        android:id="@+id/guide_btn_start"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:text="开始体验"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@drawable/btn_bg"
        android:visibility="gone"
        android:textColor="@drawable/guide_text_color"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        >

        <!--装静态点的容器-->
        <LinearLayout
            android:id="@+id/guide_point_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        </LinearLayout>
        <View
            android:id="@+id/guide_point_selected"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/guide_point_selected"/>

    </RelativeLayout>
</RelativeLayout>